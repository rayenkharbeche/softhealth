{% block body %}


    {% block titre %}

        <section id="appointment" class="appointment section-bg">
            <div class="container" data-aos="fade-up">
                <div class="titreviolet">
                    <h2>Rendez vous</h2>
                </div>
            </div>
        </section>
    {% endblock %}
    <body>
    <div class="container">
        <div class="form">

            {{ form_start(form,{
                'attr': {
                    'novalidate': 'novalidate',

                }
            }
            ) }}

            <div class="form-group">
                <label class="col-sm-3 form-control-label">Nom rendez vous</label>
                {{ form_widget(form.nomRDV) }}
                {{ form_errors(form.nomRDV) }}
            </div>
            <div class="form-group">
                <label class="col-sm-3 form-control-label">Description rendez vous</label>
                {{ form_widget(form.description) }}
                {{ form_errors(form.description) }}
            </div>
            <div class="form-group">
                <label class="col-sm-3 form-control-label">date rendez vous</label>
                {{ form_widget(form.dateRDV) }}
                {{ form_errors(form.dateRDV) }}
            </div>
            <div class="form-group">
                <label class="col-sm-3 form-control-label">User</label>
                {{ form_widget(form.user) }}
                {{ form_errors(form.user) }}
            </div>
            <div class="form-group">
                <label class="col-sm-3 form-control-label">Patient</label>
                {{ form_widget(form.patient) }}
                {{ form_errors(form.patient) }}
            </div>
            <div class="form-group">
                <label class="col-sm-3 form-control-label">Planning</label>
                {{ form_widget(form.plannings) }}
                {{ form_errors(form.plannings) }}
            </div>


            <div class="form-group">
                <button class="btn btn-lg btn-primary">>{{ button_label|default('Save') }}</button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
    </body>
{% endblock %}
{% block javascipts %}
    <script>
        jQuery(document).ready(function (){
            $('.js-datepicker').datepicker();
        });
    </script>
{% endblock %}
