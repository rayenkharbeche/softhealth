    <script>
        $( document ).ready(function() {
            $("#search").keyup(function(e){
                var value = $(this).val();
                $.ajax({
                    url : "{{ path('rendez_vous_index') }}",
                    type : 'GET',
                    data: {
                        'searchValue' : value
                    },
                    success : function(retour){
                        if(retour){
                            $('.t tbody#search').empty();
                            $.each(JSON.parse(retour), function(i, obj) {
                                $('.t tbody.all').hide();
                                $('.t tbody#search').append('<tr><td> '+obj.id+' </td><td> '+obj.nomRDV+' </td><td>'+obj.dateRDV+' </td><td>'+obj.description+' </td><td>'+obj.patient+' </td><td>'+obj.user+' </td><td>'+obj.plannings+' </td><td><ahref="rendez/vous/'+obj.id+'/edit">modifier</a> </br><ahref="rendez/vous/'+obj.id+'">supprimer</a></td></tr>');
                            });

                        }
                        else
                        {

                            $('.t tbody.all').show();
                            $('.t tbody#search').empty();
                            $('.t tbody#search').fadeIn('fast');

                        }

                    },
                });
                return false;
            });
        });
    </script>
