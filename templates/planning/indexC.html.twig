            <div class="content-inner">
                <!-- Page Header-->
                <header class="page-header">
                    <div class="container-fluid">
                        <h2 class="no-margin-bottom">Planning</h2>
                    </div>
                </header>
                <!-- Breadcrumb-->
                <div class="breadcrumb-holder container-fluid">
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href={{ path('app_home') }}>Home</a></li>
                        <li class="breadcrumb-item active">Planning</li>
                    </ul>
                </div>
                <section class="tables">
                    <div class="container-fluid">
                        <div class="row">


                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-close">
                                        <div class="dropdown">
                                            <button type="button" id="closeCard3" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="dropdown-toggle"><i class="fa fa-ellipsis-v"></i></button>
                                            <div aria-labelledby="closeCard3" class="dropdown-menu dropdown-menu-right has-shadow"><a href="#" class="dropdown-item remove"> <i class="fa fa-times"></i>Close</a><a href="#" class="dropdown-item edit"> <i class="fa fa-gear"></i>Edit</a></div>
                                        </div>
                                    </div>
                                    <div class="card-header d-flex align-items-center">
                                        <h3 class="h4">Planning</h3>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <h1>Planning index</h1>
                                            <table class="table">
                                                <thead>
                                                <tr>
                                                    <th>Id</th>
                                                    <th>Nom Planning</th>
                                                    <th>DateDebut</th>
                                                    <th>DateFin</th>
                                                    <th>Description Planning</th>
                                                    <th>Rendez Vous</th>
                                                    <th>Personnel</th>
                                                    <th>actions</th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                {% for planning in plannings %}
                                                    <tr>
                                                        <td>{{ planning.id }}</td>
                                                        <td>{{ planning.nomP }}</td>
                                                        <td>{{ planning.dateDebut ? planning.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
                                                        <td>{{ planning.dateFin ? planning.dateFin|date('Y-m-d H:i:s') : '' }}</td>
                                                        <td>{{ planning.descriptionP }}</td>
                                                        <td>{% for renders in planning.renders %}
                                                            {{ renders }}
                                                            {% endfor %}
                                                        </td>
                                                        <td>{{ planning.personnel }}</td>
                                                        <td>
                                                            <a href="{{ path('planning_show', {'id': planning.id}) }}">show</a>
                                                            <a href="{{ path('planning_edit', {'id': planning.id}) }}">edit</a>
                                                            {{ include('planning/_delete_form.html.twig') }}
                                                        </td>
                                                    </tr>
                                                {% else %}
                                                    <tr>
                                                        <td colspan="6">no records found</td>
                                                    </tr>
                                                {% endfor %}
                                                </tbody>
                                            </table>
                                            <a href="{{ path('planning_new') }}">Create new</a>
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </div>
