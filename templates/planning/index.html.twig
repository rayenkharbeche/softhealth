{% block javascripts %}
    <script>
        window.onload =() => {
            let calendarElt =document.querySelector("#calendrier")

            let Planning = new FullCalendar.Calendar(calendarElt, {
                initialView: 'dayGridMonth',
                locale : 'fr',
                timeZone : 'Europe/Paris',

                businessHours: {
                    start: '09:00',
                    end: '18:30',
                    dow: [1, 2, 3, 4, 5]
                },
                headerToolbar: {
                    start: 'prev, next today',
                    center: 'title',
                    end: 'dayGridMonth,timeGridWeek,list'
                },
                events: {{ data|raw }},
                nowIndicator: true,
                editable: true,
                eventResizableFromStart: true


            })

            Planning.on('eventChange',(e)=> {
                let url = `/api/${e.event.id}/edit`
                let donnees ={
                    "nomP": e.event.title,
                    "description": e.event.extendedProps.description,
                    "dateDebut": e.event.start,
                    "dateFin": e.event.end,
                    "renders": e.event.backgroundColor,
                    "personnel": e.event.textColor
                }

               // console.log(donnees)
                let xhr = new XMLHttpRequest
                xhr.open("PUT",url)
                xhr.send(JSON.stringify(donnees))

            })
            Planning.render()
        }
    </script>
