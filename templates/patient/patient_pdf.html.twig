    <script>
        $("#sea").keyup(function(e){
            //console.log("ok");
            var value = $(this).val();
            $.ajax({
                url : "{{ path('searchPatient') }}",
                type : 'GET',
                data: {
                    'seaValue' : value
                },
                success : function(retour){
                    if(retour){

                        $('#sea').empty();
                        console.log(retour);

                        $.each(JSON.parse(retour), function(i, obj) {
                            $('#t tbody#all').hide();
                            $('#t tbody#sea').append('<tr><td> '+obj.id+' </td><td> '+obj.prenom+' </td><td>'+obj.nom+' </td><td><ahref="patient/'+obj.id+'/edit">modifier</a> </br><ahref="patient'+obj.id+'">supprimer</a></td></tr>');
                        });



                    }
                    else
                    {

                        $('#t tbody#all').show();
                        $('#t tbody#sea').empty();
                        $('#t tbody#sea').fadeIn('fast');

                    }


                },
            });
            return false;
        });




    </script>

