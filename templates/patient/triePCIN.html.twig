            <div class="content-inner">
                <!-- Page Header-->
                <header class="page-header">
                    <div class="container-fluid">
                        <h2 class="no-margin-bottom">Patient</h2>
                    </div>
                </header>
                <!-- Breadcrumb-->
                <div class="breadcrumb-holder container-fluid">
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                        <li class="breadcrumb-item active">Patient</li>
                    </ul>
                </div>
                <section class="tables">
                    <div class="container-fluid">
                        <div class="row">


                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-close">
                                        <div class="dropdown">
                                            <button type="button" id="closeCard3" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="dropdown-toggle"><i class="fa fa-ellipsis-v"></i></button>
                                            <div aria-labelledby="closeCard3" class="dropdown-menu dropdown-menu-right has-shadow"><a href="#" class="dropdown-item remove"> <i class="fa fa-times"></i>Close</a><a href="#" class="dropdown-item edit"> <i class="fa fa-gear"></i>Edit</a></div>
                                        </div>
                                    </div>
                                    <div class="card-header d-flex align-items-center">
                                        <h3 class="h4">Liste des patients tri√©e</h3>
                                    </div>


                                    {#  <button class="btn btn-lg btn-primary">  <a  href="{{path('patient_trie') }}"> trie par Nom</a> </button>  #}
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-hover">
                                                <thead>


                                                <tr>
                                                    <th>Id</th>
                                                    <th>Cin</th>
                                                    <th>Nom</th>
                                                    <th>Prenom</th>
                                                    <th>Email</th>
                                                    <th>Password</th>
                                                    <th>Consultation</th>

                                                </tr>
                                                </thead>

                                                <tbody>
                                                {% for patientCIN in patientCIN %}
                                                    <tr>
                                                        <td>{{ patientCIN.id }}</td>
                                                        <td>{{ patientCIN.cin }}</td>
                                                        <td>{{ patientCIN.nom }}</td>
                                                        <td>{{ patientCIN.prenom }}</td>
                                                        <td>{{ patientCIN.email }}</td>
                                                        <td>{{ patientCIN.password }}</td>
                                                        <td>{% for cons in patientCIN.consultation %}
                                                                {{ cons }}
                                                            {% endfor %}</td>

                                                        <td>
                                                            <button class="btn btn-lg btn-secondary"> <a href="{{ path('patient_show', {'id': patientCIN.id}) }}">show</a></button>
                                                            <button class="btn btn-lg btn-secondary"><a href="{{ path('patient_edit', {'id': patientCIN.id}) }}">edit</a></button>
                                                        </td>
                                                    </tr>
                                                {% else %}
                                                    <tr>
                                                        <td colspan="7">no records found</td>
                                                    </tr>
                                                {% endfor %}
                                                </tbody>
                                            </table>
                                            <div class="form-group">
                                                <button class="btn btn-lg btn-secondary"><a href="{{ path('pdf') }}">PDF</a></button>
                                                <button class="btn btn-lg btn-secondary"><a href="{{ path('patient_new') }}">Create new</a></button>
                                                <button class="btn btn-lg btn-secondary"><a href="{{ path('patient_index') }}">back to list</a></button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>
                </section>
