{% extends 'baseB.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <body>
    <div class="container">
        <div class="form">


            {% for flashError in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}


            <h1 class="h4">Inscription</h1>




            {{ form_start(registrationForm,{
                'attr': {
                    'novalidate': 'novalidate',

                }
            }

            ) }}

            <div class="form-group">



                {{ form_row(registrationForm.email) }}
                {{ form_errors(registrationForm.email) }}
            </div>

            <div class="form-group"  >

                {{ form_row(registrationForm.roles) }}

            </div>

            <div  class="form-group">
                {{ form_row(registrationForm.plainPassword) }}


            </div>

            <div class="form-group">
                {{ form_row(registrationForm.cin) }}
                {{ form_errors(registrationForm.cin) }}
            </div>

            <div>
                {{ form_row(registrationForm.username) }}
                {{ form_errors(registrationForm.username) }}
            </div>

            <div class="i-checks">
                {{ form_row(registrationForm.agreeTerms) }}

            </div>

            <div class="form-group">

                <button type="submit" class="btn btn-lg btn-primary">Inscrire</button>
            </div>

            <div class="alert alert-info">{{form_rest(registrationForm) }} </div>

            {{ form_end(registrationForm) }}


            <!-- Page Footer-->
            <footer class="main-footer">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-sm-6">
                            <p>Soft Health </p>
                        </div>
                        <div class="col-sm-6 text-right">
                            <p>Design by <a href="https://bootstrapious.com/p/admin-template" class="external">Bootstrapious</a></p>
                            <!-- Please do not remove the backlink to us unless you support further theme's development at https://bootstrapious.com/donate. It is part of the license conditions. Thank you for understanding :)-->
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>



    </body>
{% endblock %}