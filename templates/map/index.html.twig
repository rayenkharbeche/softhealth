<!-- Fichiers Javascript -->
<script src="https://unpkg.com/leaflet@1.3.1/dist/leaflet.js"
        integrity="sha512-/Nsx9X4HebavoBvEBuyp3I7od5tA0UzAxs+j83KgC8PU0kgB4XiK4Lfe4y4cgBtaRJQEIFCW+oC506aPT2L1zw==" crossorigin=""></script>
<script type="text/javascript">
    // On initialise la latitude et la longitude de Ariana (centre de la carte)
    var lat = 36.857098;
    var lon = 10.193253;
    var macarte = null;
    // Nous initialisons une liste de marqueurs
    var villes = {
        "Bizerte": { "lat":37.160317, "lon": 37.160317},
        "Ariana": { "lat":36.857098, "lon": 10.193253},
        "Tunis": { "lat": 36.791691, "lon": 10.191193 },
        "Beja": { "lat":36.633162, "lon": 9.206543},
        "Sousse": { "lat": 35.782171, "lon": 10.601807},
        "Sfax": { "lat": 34.696461, "lon":  10.799561 }
    };
    // Fonction d'initialisation de la carte
    function initMap() {
        // Créer l'objet "macarte" et l'insèrer dans l'élément HTML qui a l'ID "map"
        macarte = L.map('map').setView([36.857098, 10.193253], 6);
        // Leaflet ne récupère pas les cartes (tiles) sur un serveur par défaut. Nous devons lui préciser où nous souhaitons les récupérer. Ici, openstreetmap.fr
        L.tileLayer('https://{s}.tile.openstreetmap.fr/osmfr/{z}/{x}/{y}.png', {
            // Il est toujours bien de laisser le lien vers la source des données
            attribution: ' © <a href="//osm.org/copyright">SparkTeam</a>/Tunisia<a href="//openstreetmap.fr">OSM Ariana</a>',
            minZoom: 1,
            maxZoom: 20
        }).addTo(macarte);
        //on parcours les villes
        for (ville in villes) {

        // Nous ajoutons un marqueur
        var marker =  L.marker(([villes[ville].lat, villes[ville].lon])).addTo(macarte);{# Tunisia LatLng(33.28462, 10.546875)#}
        marker.bindPopup("<p> "+villes+"</p>");}

    }
    window.onload = function(){
        // Fonction d'initialisation qui s'exécute lorsque le DOM est chargé
        initMap();
    };
</script>
</body>
